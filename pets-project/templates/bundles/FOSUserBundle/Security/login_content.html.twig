{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div class="card" style="float:left; ">

<img   src="{{asset('images/inicio.jpeg')}}" alt="inicio" height="500px" width="500px" >

</div>

 
<div class="card" style="float:right; margin-bottom: 200px " >
    <h5 class="card-header info-color white-text text-center py-4">
                <strong>Inicio Seccion</strong>
    </h5>
    <div class="card-body px-lg-5">
        <form action="{{ path("fos_user_security_check") }}" method="post" 
             class="text-center border border-dark p-5"  >
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

            

             <div class="md-form mt-3">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" placeholder="Nombre"/>
            </div>
            

             <div class="md-form mt-3">
           
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Contrasenia"/>
            </div>


            <input type="submit" class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

            <br>

            <div class="form-check">
            <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            
        </form>
    </div>
</div>
