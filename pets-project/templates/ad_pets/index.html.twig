{% extends 'base.html.twig' %}

{% block body %}
    <h1 align="center" style="padding: 30px">Mis anuncios</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Foto</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for ad_pet in ad_pets %}
            <tr>
                <td>{{ ad_pet.tittle }}</td>

                <td><img src="{{ vich_uploader_asset(ad_pet, 'imageFile') }}" alt="{{ ad_pet.tittle }}" height="50" width="50" class="img-fluid" style="border: cadetblue 1px solid"/></td>
                <td>{{ ad_pet.description }}</td>
                <td>
                    <a href="{{ path('ad_pets_show', {'id': ad_pet.id}) }}">Ver</a>
                    <a href="{{ path('ad_pets_edit', {'id': ad_pet.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <center><a href="{{ path('ad_pets_new') }}"><button type="button" class="btn btn-primary" align="center">Crear anuncio</button></a></center>
{% endblock %}
