{% extends 'base.html.twig' %}

{% block title %}Anuncios{% endblock %}

{% block body %}
    <h1>Mascotas</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tittle</th>
                <th>Photo</th>
                <th>Description</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ad_pet in ad_pets %}
            <tr>
                <td>{{ ad_pet.id }}</td>
                <td>{{ ad_pet.tittle }}</td>
                <td><img src="{{ vich_uploader_asset(ad_pet, 'imageFile') }}" alt="{{ ad_pet.tittle }}" height="35"/></td>
                <td>{{ ad_pet.description }}</td>
                <td>{{ ad_pet.status }}</td>
                <td>
                    <a href="{{ path('ad_pets_show', {'id': ad_pet.id}) }}">show</a>
                    <a href="{{ path('ad_pets_edit', {'id': ad_pet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ad_pets_new') }}">Create new</a>
{% endblock %}
