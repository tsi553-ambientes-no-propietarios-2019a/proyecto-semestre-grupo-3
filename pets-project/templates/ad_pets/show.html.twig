    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ad_pet.id }}</td>
            </tr>
            <tr>
                <th>Tittle</th>
                <td>{{ ad_pet.tittle }}</td>
            </tr>
            <tr>
